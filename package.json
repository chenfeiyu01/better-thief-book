{
  "name": "thief-mud-game",
  "displayName": "thief-mud-game",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:thief-mud-game.helloWorld"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "thief-mud-game.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "thief-mud-game.displayCode",
        "title": "thief-mud-game.DisplayCode"
      },
      {
        "command": "thief-mud-game.getPreviousPage",
        "title": "thief-mud-game.PreviousBook"
      },
      {
        "command": "thief-mud-game.getNextPage",
        "title": "thief-mud-game.NextBook"
      },
      {
        "command": "thief-mud-game.getJumpingPage",
        "title": "thief-mud-game.JumpingBook"
      },
      {
        "command": "thief-mud-game.reloadBook",
        "title": "thief-mud-game.ReloadBook"
      }
    ],
    "keybindings": [
      {
        "command": "thief-mud-game.getPreviousPage",
        "key": "ctrl+alt+,",
        "mac": "cmd+,",
        "when": "editorTextFocus"
      },
      {
        "command": "thief-mud-game.getNextPage",
        "key": "ctrl+alt+.",
        "mac": "cmd+.",
        "when": "editorTextFocus"
      },
      {
        "command": "thief-mud-game.getJumpingPage",
        "key": "ctrl+alt+;",
        "mac": "cmd+;"
      },
      {
        "command": "thief-mud-game.displayCode",
        "key": "ctrl+m",
        "mac": "cmd+m"
      }
    ],
    "configuration": {
      "title": "Thief Mud Game",
      "properties": {
        "thief-mud-game.currPageNumber": {
          "type": "number",
          "default": 1,
          "description": "当前小说页数(支持跳转) & Pages of Current Novels (Support jumping)"
        },
        "thief-mud-game.pageSize": {
          "type": "number",
          "default": 50,
          "description": "每页文字数量 & Number of text per page"
        },
        "thief-mud-game.isEnglish": {
          "type": "boolean",
          "default": false,
          "description": "是否为英文书籍？ & Is it an English book？"
        },
        "thief-mud-game.lineBreak": {
          "type": "string",
          "default": " ",
          "description": "换行分隔符号，默认一个空格 & Line Break Separation Symbol,Default a space"
        },
        "thief-mud-game.filePath": {
          "type": "string",
          "default": "/Users/chenfeiyu/Downloads/song_of_ice_and_fire.txt",
          "description": "TXT格式小说绝对路径 & Absolute Path of TXT Format Novels"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "yarn run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "eslint": "^8.6.0",
    "glob": "^7.2.0",
    "mocha": "^9.1.3",
    "typescript": "^4.5.4",
    "@vscode/test-electron": "^2.0.3"
  }
}
